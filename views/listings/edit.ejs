<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">

    <h3>Edit your Listing</h3>

    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">

      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" value="<%= listing.title %>" type="text" placeholder="Enter title" class="form-control" required>
        <div class="valid-feedback">Title looks good</div>
        <div class="invalid-feedback">Enter a valid title</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" placeholder="Enter description" class="form-control" required><%= listing.description %></textarea>
        <div class="invalid-feedback">Description should be valid</div>
      </div>

      <!-- Original Image -->
      <div class="mb-3">
        <label>Original Listing Image</label><br />
        <% if (isCloudinary) { %>
          <img src="<%= originalImageUrl %>">
        <% } else { %>
          <img src="<%= originalImageUrl %>" style="width:250px; height:100px;">
        <% } %>
      </div>

      <!-- Upload New Image -->
      <div class="mb-3">
        <label for="url" class="form-label">Upload New Image</label>
        <input name="listing[image]" type="file" class="form-control">
      </div>

      <!-- Category -->
      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select name="listing[category]" id="category" class="form-select" required>
          <option value="" disabled>Select a category</option>
          <option value="Trending" <%= listing.category === "Trending" ? "selected" : "" %>>Trending</option>
          <option value="Rooms" <%= listing.category === "Rooms" ? "selected" : "" %>>Rooms</option>
          <option value="Mountains" <%= listing.category === "Mountains" ? "selected" : "" %>>Mountains</option>
          <option value="Beaches" <%= listing.category === "Beaches" ? "selected" : "" %>>Beaches</option>
          <option value="Cities" <%= listing.category === "Cities" ? "selected" : "" %>>Cities</option>
          <option value="Castles" <%= listing.category === "Castles" ? "selected" : "" %>>Castles</option>
          <option value="Pools" <%= listing.category === "Pools" ? "selected" : "" %>>Pools</option>
          <option value="Camping" <%= listing.category === "Camping" ? "selected" : "" %>>Camping</option>
          <option value="Farms" <%= listing.category === "Farms" ? "selected" : "" %>>Farms</option>
          <option value="Arctic" <%= listing.category === "Arctic" ? "selected" : "" %>>Arctic</option>
          <option value="Iconic Cities" <%= listing.category === "Iconic Cities" ? "selected" : "" %>>Iconic Cities</option>
        </select>
        <div class="invalid-feedback">Please select a category</div>
      </div>

      <!-- Price + Rooms + Country -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input name="listing[price]" value="<%= listing.price %>" type="number" placeholder="Enter price" class="form-control" required min="0">
          <div class="invalid-feedback">Please enter a valid price</div>
        </div>

        <!-- Rooms Available -->
        <div class="mb-3 col-md-4">
          <label for="roomsAvailable" class="form-label">Rooms Available</label>
          <input name="listing[roomsAvailable]" value="<%= listing.roomsAvailable %>" type="number" placeholder="Enter number of rooms" class="form-control" required min="1">
          <div class="invalid-feedback">Please enter the number of available rooms</div>
        </div>

         <!-- Phone Number -->
        <div class="mb-3 col-md-3">
          <label for="phoneNumber" class="form-label">Owner Phone Number (with country code)</label>
          <input name="listing[phoneNumber]" value="<%= listing.phoneNumber || '' %>" type="text" placeholder="+1 234 567 890" class="form-control" pattern="^\\+?[0-9]{7,15}$" required>
          <div class="invalid-feedback">Please enter a valid phone number with country code</div>
        </div>

        <div class="mb-3 col-md-4">
          <label for="country" class="form-label">Country</label>
          <input name="listing[country]" value="<%= listing.country %>" type="text" placeholder="Enter country" class="form-control" required>
          <div class="invalid-feedback">Country name should be valid</div>
        </div>
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" value="<%= listing.location %>" type="text" placeholder="Enter location" class="form-control" required>
        <div class="invalid-feedback">Location should be valid</div>
      </div>

      <!-- Submit Button -->
      <button class="btn btn-dark edit-btn mt-3">Save Changes</button>
      <br><br>
    </form>

  </div>
</div>
