<% layout("/layouts/boilerplate") %>

<div id="filters" class="d-flex flex-row flex-wrap flex-sm-nowrap overflow-auto mb-3">
  <!-- Trending -->
  <form method="POST" action="/listings/filter" class="filter-form me-2">
    <input type="hidden" name="category" value="Trending">
    <button type="submit" class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </button>
  </form>

  <!-- Rooms -->
  <form method="POST" action="/listings/filter" class="filter-form me-2">
    <input type="hidden" name="category" value="Rooms">
    <button type="submit" class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </button>
  </form>

  <!-- Iconic Cities -->
  <form method="POST" action="/listings/filter" class="filter-form me-2">
    <input type="hidden" name="category" value="Iconic Cities">
    <button type="submit" class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </button>
  </form>

  <!-- Mountains -->
  <form method="POST" action="/listings/filter" class="filter-form me-2">
    <input type="hidden" name="category" value="Mountains">
    <button type="submit" class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </button>
  </form>

  <!-- Castles -->
  <form method="POST" action="/listings/filter" class="filter-form me-2">
    <input type="hidden" name="category" value="Castles">
    <button type="submit" class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </button>
  </form>

  <!-- Pools -->
  <form method="POST" action="/listings/filter" class="filter-form me-2">
    <input type="hidden" name="category" value="Pools">
    <button type="submit" class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Pools</p>
    </button>
  </form>

  <!-- Camping -->
  <form method="POST" action="/listings/filter" class="filter-form me-2">
    <input type="hidden" name="category" value="Camping">
    <button type="submit" class="filter">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </button>
  </form>

  <!-- Farms -->
  <form method="POST" action="/listings/filter" class="filter-form me-2">
    <input type="hidden" name="category" value="Farms">
    <button type="submit" class="filter">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </button>
  </form>

  <!-- Arctic -->
  <form method="POST" action="/listings/filter" class="filter-form me-2">
    <input type="hidden" name="category" value="Arctic">
    <button type="submit" class="filter">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Arctic</p>
    </button>
  </form>

  <!-- Tax toggle -->
<!-- Tax toggle with slider -->
<div class="tax-toggle">
  <div class="form-check form-switch ms-2">
    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
    <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
  </div>
</div>


</div>


<!-- Listings Display -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let listing of allListings) { %>
    <a href="/listings/<%= listing.id %>" class="listing-list">
      <div class="card listing-card col">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br>
            &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night
            <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
          </p>
        </div>
      </div>
    </a>
  <% } %>
</div>

<script>
  const taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for(info of taxInfo){
      if(info.style.display!= "inline"){
        info.style.display = "inline";
      }else{
        info.style.display = "none";
      }
    }
  });
</script>
