  <form method="POST" action="/listings/filter" class="filter-form me-2">
    <input type="hidden" name="category" value="Castles">
    <button type="submit" class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </button>
  </form>

  <!-- Pools -->
  <form method="POST" action="/listings/filter" class="filter-form me-2">
    <input type="hidden" name="category" value="Pools">
    <button type="submit" class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Pools</p>
    </button>
  </form>

  <!-- Camping -->
  <form method="POST" action="/listings/filter" class="filter-form me-2">
    <input type="hidden" name="category" value="Camping">
    <button type="submit" class="filter">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </button>
  </form>

  <!-- Beaches -->
  <form method="POST" action="/listings/filter" class="filter-form me-2">
    <input type="hidden" name="category" value="Beaches">
    <button type="submit" class="filter">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beaches</p>
    </button>
  </form>

  <!-- Cities -->
  <form method="POST" action="/listings/filter" class="filter-form me-2">
    <input type="hidden" name="category" value="Cities">
    <button type="submit" class="filter">
      <div><i class="fa-solid fa-city"></i></div>
      <p>Cities</p>
    </button>
  </form>

  <!-- Farms -->
  <form method="POST" action="/listings/filter" class="filter-form me-2">
    <input type="hidden" name="category" value="Farms">
    <button type="submit" class="filter">
      <div><i class="fa-solid fa-cow"></i></div>
