<% layout("/layouts/boilerplate") %>

<!-- ðŸŒ Mobile Filter Button -->
<div class="text-center d-md-none my-3">
  <button
    type="button"
    class="btn btn-outline-secondary"
    data-bs-toggle="modal"
    data-bs-target="#filterModal"
  >
    <i class="fa-solid fa-filter"></i> Filters
  </button>
</div>

<!-- ðŸ–¥ï¸ Desktop Filter Bar -->
<div id="filters" class="d-none d-md-flex flex-row flex-wrap flex-sm-nowrap overflow-auto mb-3">
  <!-- Trending -->
  <form method="POST" action="/listings/filter" class="filter-form me-2">
    <input type="hidden" name="category" value="Trending">
    <button type="submit" class="filter">
