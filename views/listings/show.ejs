<% layout("/layouts/boilerplate") %>

<script>
  const listing = JSON.parse('<%- JSON.stringify(listing) %>');
</script>

<style>
/* General layout */
.container {
  max-width: 1200px;
}

/* Card hover animation */
.show-card:hover,
.card:hover {
  transform: translateY(-5px);
  transition: all 0.3s ease-in-out;
}

/* Map styling */
#map {
  width: 100%;
  border-radius: 10px;
}

/* Star rating system */
.star-rating {
  display: flex;
  justify-content: flex-start; /* left aligned */
  flex-direction: row-reverse;
  gap: 6px;
  margin-top: 8px;
}

.star-rating input {
  display: none;
}

.star-rating label {
  font-size: 1.8rem;
  color: #ccc;
  cursor: pointer;
  transition: color 0.2s ease;
}

.star-rating label::before {
  content: "\f005";
  font-family: FontAwesome;
}

.star-rating input:checked ~ label,
.star-rating label:hover,
.star-rating label:hover ~ label {
  color: gold;
}
</style>
<div class="container my-5" style="max-width: 1200px;">

  <!-- Title -->
  <div class="text-center mb-5">
    <h1 class="fw-bold text-dark"><%= listing.title %></h1>
    <p class="text-muted fs-5">
      <i class="fa-solid fa-location-dot text-danger me-1"></i>
      <%= listing.location %>, <%= listing.country %>
    </p>
  </div>

  <!-- Main Section -->
  <div class="row g-4 justify-content-center">

    <!-- Listing Card -->
    <div class="col-lg-7 col-md-10">
      <div class="card border-0 shadow-lg rounded-4 overflow-hidden show-card">
        <img src="<%= listing.image.url %>" alt="Listing Image" class="card-img-top" style="height: 360px; object-fit: cover;">

        <div class="card-body p-4">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-secondary">Hosted by <b>@<%= listing.owner.username %></b></span>
            <% if (listing.roomsAvailable > 0) { %>
              <span class="badge bg-success rounded-pill px-3 py-2">
                <i class="fa-solid fa-bed me-1"></i><%= listing.roomsAvailable %> Room(s) available

              </span>
            <% } else { %>
              <span class="badge bg-danger rounded-pill px-3 py-2">
                <i class="fa-solid fa-ban me-1"></i> No Rooms
              </span>
            <% } %>
          </div>

          <p class="text-muted mb-3" style="font-size: 1.05rem;"><%= listing.description %></p>

          <!-- Phone Number Section -->
          <% if (listing.phoneNumber) { %>
            <p class="fw-semibold text-dark mb-3">
              <i class="fa-solid fa-phone text-success me-2"></i>
              Contact: <%= listing.countryCode %><%= listing.phoneNumber %>
            </p>
          <% } %>

          <h4 class="fw-semibold text-primary mb-4">
            ₹<%= listing.price.toLocaleString("en-IN") %> 
            <small class="text-muted fs-6">/ night</small>
          </h4>

          <% if (currUser) { %>
            <% if (listing.roomsAvailable > 0) { %>
              <a href="/bookings/<%= listing._id %>/book" class="btn btn-primary w-100 fw-semibold shadow-sm">
                <i class="fa-solid fa-calendar-check me-2"></i> Book Now
              </a>
            <% } else { %>
              <button class="btn btn-secondary w-100 fw-semibold" disabled>
                <i class="fa-solid fa-ban me-2"></i> No Rooms Available
              </button>
            <% } %>
          <% } else { %>
            <a href="/login" class="btn btn-outline-dark w-100 fw-semibold">
              <i class="fa-solid fa-user-lock me-2"></i> Login to Book
            </a>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Map Section -->
    <div class="col-lg-5 col-md-10">
      <div class="card border-0 shadow-lg rounded-4">
        <div class="card-body p-3">
          <h5 class="fw-bold mb-3">
            <i class="fa-solid fa-map-location-dot me-2 text-primary"></i>
            Where you’ll be
          </h5>
          <div id="map" class="rounded-4 border" style="height: 350px;"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Owner Buttons (Aligned Left) -->
<% if (currUser && currUser._id.equals(listing.owner._id)) { %>
  <div class="mt-4 d-flex justify-content-start align-items-center ms-2">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-dark px-4 me-3">
      <i class="fa-solid fa-pen-to-square me-1"></i> Edit
    </a>
    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="d-inline">
      <button class="btn btn-outline-danger px-4">
        <i class="fa-solid fa-trash-can me-1"></i> Delete
      </button>
    </form>
  </div>
<% } %>

  <!-- Reviews -->
  <div class="mt-5">
    <hr class="mb-4">

    <!-- Updated Review Section with Default 3 Stars -->
    <% if (currUser) { %>
      <h4 class="fw-bold mb-3"><i class="fa-solid fa-star text-warning me-1"></i> Leave a Review</h4>
      <form action="/listings/<%= listing.id %>/reviews" method="POST" class="needs-validation mb-5">
        <div class="mb-3">
          <div class="star-rating ms-1">
            <input type="radio" id="5-stars" name="review[rating]" value="5" />
            <label for="5-stars" title="5 stars"></label>

            <input type="radio" id="4-stars" name="review[rating]" value="4" />
            <label for="4-stars" title="4 stars"></label>

            <!-- Default selected 3 stars -->
            <input type="radio" id="3-stars" name="review[rating]" value="3"  />
            <label for="3-stars" title="3 stars"></label>

            <input type="radio" id="2-stars" name="review[rating]" value="2" />
            <label for="2-stars" title="2 stars"></label>

            <input type="radio" id="1-star" name="review[rating]" value="1" checked/>
            <label for="1-star" title="1 star"></label>
          </div>
        </div>

        <div class="mb-3">
          <label for="comment" class="form-label">Your Comment</label>
          <textarea name="review[comment]" id="comment" class="form-control rounded-3" rows="4" required></textarea>
          <div class="invalid-feedback">Please share your experience.</div>
        </div>
        <button class="btn btn-outline-primary fw-semibold px-4">Submit</button>
      </form>
      <hr>
    <% } %>

    <% if (listing.reviews.length > 0) { %>
      <h4 class="fw-bold mb-3"><i class="fa-solid fa-comments me-2 text-info"></i> All Reviews</h4>
      <div class="row gy-4">
        <% for (review of listing.reviews) { %>
          <div class="col-md-5 mx-3">
            <div class="card border-0 shadow-sm rounded-4 p-3">
              <h5 class="card-title">@<%= review.author.username %></h5>
              <div class="stars mb-2">
                <% for (let i = 0; i < review.rating; i++) { %>
                  <i class="fa-solid fa-star text-warning"></i>
                <% } %>
              </div>
              <p class="card-text text-muted"><%= review.comment %></p>
              <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-outline-danger mt-2">
                  <i class="fa-solid fa-trash-can me-1"></i> Delete
                </button>
              </form>
            </div>
          </div>
        <% } %>
      </div>
    <% } %>
  </div>

</div>

<!-- Leaflet -->
<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

<!-- FontAwesome -->
<script src="https://kit.fontawesome.com/a2b4f9f6a6.js" crossorigin="anonymous"></script>

<script>
document.addEventListener("DOMContentLoaded", () => {
  if (listing.geometry && listing.geometry.coordinates) {
    const coordinates = listing.geometry.coordinates.slice().reverse();
    const map = L.map('map').setView(coordinates, 11);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    L.marker(coordinates)
      .addTo(map)
      .bindPopup(`<h6 class="fw-bold">${listing.title}</h6><p class="text-muted mb-0">Exact location shown after booking.</p>`)
      .openPopup();
  } else {
    document.getElementById('map').innerHTML = "<p class='text-muted text-center pt-4'>Map not available for this listing.</p>";
  }
});
</script>


